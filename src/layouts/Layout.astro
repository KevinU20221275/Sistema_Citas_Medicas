---
import { AsideMenu } from "src/components/Aside";
import { HeaderMenu } from "src/components/Header";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/src/styles/global.css">
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<ClientRouter fallback="none"/>
	</head>
	<body>
		<div id="app" class="h-screen relative bg-[#FCF6FA] ">
			
			<header class="[grid-area:header] flex justify-between items-center border-b-[1px] border-zinc-300 px-4 py-3">
				<HeaderMenu client:load/>
			</header>
			<aside class="[grid-area:aside] py-8 px-6 border-r-[1px] border-zinc-300">
				<AsideMenu client:load/>
			</aside>
			<main class="[grid-area:main] overflow-y-auto">
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	html.dark {
		#app {
			background-color: #18181B !important;
			color: white;
		}

		.card {
			background-color: #111113;

			picture {
				color: oklch(45.7% 0.24 277.023);
			}

			
		}
		.filter-btn-inactive {
			background-color: oklch(27.4% 0.006 286.033);
		}

		.filter-btn-inactive:hover {
			background-color: oklch(37% 0.013 285.805);
		}

		.filter-btn-active {
			background-color: oklch(45.7% 0.24 277.023);
		}

		.filter-btn-active:hover {
			background-color: oklch(51.1% 0.262 276.966);
		}

		.btn-card {
			background-color: oklch(45.7% 0.24 277.023);
		}

		select,input {
			background-color: oklch(27.4% 0.006 286.033);/*zinc-800*/
		}

		.modal {
			background-color: oklch(27.4% 0.006 286.033)
		}
		.close-modal-btn:hover {
			background-color: oklch(44.2% 0.017 285.786);/*zinc-600*/
		}

		.icon-form {
			color: oklch(45.7% 0.24 277.023);
		}

		.nav-active {
			background-color: oklch(45.7% 0.24 277.023);/*indigo-700*/
		}
		.nav-inactive:hover {
			background-color: oklch(51.1% 0.262 276.966);
		}
		.toggle-btn:hover {
			background-color: oklch(44.2% 0.017 285.786)
		}
		.toggle-btn-wrapper {
			background-color: oklch(27.4% 0.006 286.033);
		}
	}

	#app {
		display: grid;
		grid-template-areas:
		"header header header"
		"aside main main"
		;
		grid-template-columns: auto 1fr;
		grid-template-rows: auto 1fr;
	}

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}
</style>
